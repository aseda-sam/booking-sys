<%= search_form_for @q do |f| %>
<%#= search_form_for @q, :html => { :class => "form-inline my-2 my-lg-0" } do |f| %>
    
  <div class="row">
    <div class="col-sm form-inline my-2">
      <%= f.label :group_or_activity_cont, "Group", :class => 'control-label col-lg-2' %>
      <%= f.search_field :group_or_activity_cont, :class => 'form-control mr-sm-2', :placeholder => "Search group here..." %>
    </div>
  </div>
    
  <div class="row ">
    <div class="col-sm form-inline">
      <%= f.label :reserve_date_gteq, "Date between", :class => 'control-label col-lg-2' %>
      <%= f.date_select :reserve_date_gteq, :class => 'form-control mr-sm-2', :placeholder => "Start Date" %>
      
      <%= f.label :reserve_date_lteq, "and", :class => 'control-label col-lg-2' %>
      <%= f.date_select :reserve_date_lteq, :class => 'form-control mr-sm-2', :placeholder => "End Date" %>
      
      <%= f.submit nil, :class => 'btn btn-outline-success my-2 my-sm-0' %>
      
      <%= link_to 'Clear', reservations_path, :class => 'btn btn-primary ml-2' %>
    </div>
  </div>
  
<% end %>

