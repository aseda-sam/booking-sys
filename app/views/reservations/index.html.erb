<div class="container-fluid">
  
  <div class="row">  
    <h1>Reservations</h1>
  </div>  
    
  <div class="row">
    
    <!--<div>-->
    <!--  <%#= render 'reservations/search' %>  -->
    <!--</div>-->
    
    <div>
      <%= link_to 'New Reservation', new_reservation_path, :class => 'btn btn-primary' %>
    </div>
  </div>
  
  <div class="row">
    <div class="table-responsive table-wrapper-scroll-y">
      <table id="dtVerticalScrollExample" class="table">
        <caption>List of reservations</caption>
        <thead class="table-dark text-center">
          <tr>
            <th scope="col">#</th>
            
            <th scope="col" >Activity</th>
            <i class="fa fa-sort float-right" aria-hidden="true"></i>
            <%#= content_tag :th, sort_link(@q, :activity, 'Activity') %>
            
            <th scope="col">Date</th>
            <th scope="col">Time</th>
            
            <!--<th scope="col">Duration</th>-->
            
            <th scope="col">Status</th>
            <%#= content_tag :th, sort_link(@q, :status, 'Status') %>
            <th scope="col">Room</th>
            <%#= content_tag :th, sort_link(@q, :room, 'Room') %>
            <th scope="col">Group</th>
            <%#= content_tag :th, sort_link(@q, :group, 'Group') %>
            <th scope="col">Person</th>
            <%#= content_tag :th, sort_link(@q, :person, 'Person') %>
            
            <!--<th scope="col">Phone</th>-->
            <!--<th scope="col">Email</th>-->
            
            <th scope="col">Actions</th>
          </tr>
        </thead>
      
        <tbody>
          <% @reservations.each do |reservation| %>
            <tr class="text-center">
              <td scope="row"><%= link_to ("rsv #{reservation.id}"), reservation %></td>
              <td scope="row"><%= reservation.activity %></td>
              <td scope="row"><%= reservation.reserve_date.to_s(:short) %></td>
              <td scope="row">
                <%= reservation.time_start.strftime('%l:%M %p') %>
                <span> - </span>
                <%= reservation.time_end.strftime('%l:%M %p') %>
              </td>
              
              <!--<td scope="row"><%#= reservation.duration %></td>-->
              
              <td scope="row"><%= reservation.status %></td>
              <th scope="row"><%= reservation.room.name %></th>
              <td scope="row"><%= reservation.group %></td>
              <td scope="row"><%= reservation.person %></td>
              
              <!--<td scope="row"><%#= reservation.phone %></td>-->
              <!--<td scope="row"><%#= reservation.email %></td>-->
              
              <td>
                <div class="index-table-actions">
              <!--  <%#= link_to 'Show', reservation, :class => 'btn btn-xs btn-info' %>-->
              <!--  <%#= link_to 'Edit', edit_reservation_path(reservation), :class => 'btn btn-xs btn-warning' %>-->
                <%= link_to 'Delete', reservation, method: :delete, data: { confirm: 'Are you sure?', remote: true }, 
                                                            :class => 'btn btn-xs btn-danger delete' %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>